{% extends 'base.html.twig' %}

{% block body %}
    <h1>SignUP</h1>


<div class="row">
    <div class="col-2"></div>
    <div class="col-4">
        {{ form_start(signUpForm, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="form-group row">
                {{ form_label(signUpForm.name) }}
                {{ form_errors(signUpForm.name) }}
                {{ form_widget(signUpForm.name, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(signUpForm.mail) }}
                {{ form_errors(signUpForm.mail) }}
                {{ form_widget(signUpForm.mail, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(signUpForm.plainPassword) }}
                {{ form_errors(signUpForm.plainPassword) }}
                {{ form_widget(signUpForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group row">
                {{ form_label(signUpForm.plainPasswordSecond) }}
                {{ form_errors(signUpForm.plainPasswordSecond) }}
                {{ form_widget(signUpForm.plainPasswordSecond, {'attr': {'class': 'form-control'}}) }}
            </div>

        <button type="submit" class="btn btn-primary">Register</button>
        {{ form_end(signUpForm) }}
    </div>
    <div class="col-2"></div>
</div>
{% endblock %}
